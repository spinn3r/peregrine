#!/bin/sh

main=peregrine.controller.Main

start() {

    stdout="/dev/null"
    stderr="/dev/null"

    ./bin/jexec $main < /dev/null > $stdout 2> $stderr &

}

stop() {

    pkill -9 -f $main

    echo "stopped"

}

args=$@
shift $(expr $# - 1)
command=$1

case $command in

    start)
        start
        ;;

    stop)
        stop
        ;;

    restart)
        stop
        start
        ;;

    *)
        echo "ERROR: unknown command: $command" 
        exit 1
        ;;

esac
