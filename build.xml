<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="peregrine" default="jar" basedir=".">

    <property environment="env"/>

    <property file="build.properties"/>

    <property name="project" value="peregrine"/>
    <property name="javadocdir" value="compile/javadoc"/>
    <property name="version" value="0.0.1"/>

    <path id="project.classpath">

        <pathelement location="compile"/>

        <fileset dir="lib">
             <include name="*.jar"/>
        </fileset>

    </path>

    <property name="clover.jar" location="./lib/clover-ant-3.1.0.jar"/>

    <taskdef resource="cloverlib.xml" classpath="${clover.jar}"/>

    <target name="with.clover">
        <clover-setup/>
    </target>

    <target name="clover.html">
      <clover-html-report outdir="clover_html"
                          title="My Project"/>
    </target>

    <target name="compile">

        <mkdir dir="compile"/>

        <javac classpathref="project.classpath"
               nowarn="on"
               source="1.5"
               target="1.5"
               srcdir="src/java"
               destdir="compile"
               fork="true"
               memoryMaximumSize="512M"
               deprecation="no"
               debug="true">
            <include name="**/*.java"/>
            <exclude name="**/*SExpander.java"/>
        </javac>

    </target>
    
    <target name="clean">
        <delete dir="clover.html"/>
        <delete dir=".clover"/>
        <delete dir="compile"/>
        <delete dir="target"/>
    </target>

    <target name="jar" depends="compile">

        <mkdir dir="target"/>

        <jar compress="yes" jarfile="target/${project}-${version}.jar">

            <fileset dir="compile">

                <include name="com/**"/>
                <include name="org/**"/>
                <include name="peregrine/**"/>
            
            </fileset>

        </jar>

    </target>

    <target name="compile.test">

        <javac classpathref="project.classpath"
               nowarn="on"
               source="1.5"
               target="1.5"
               srcdir="src/test"
               destdir="compile"
               fork="true"
               memoryMaximumSize="512M"
               deprecation="no"
               debug="true">
            <include name="**/*.java"/>
            <exclude name="**/*SExpander.java"/>
        </javac>

    </target>

    <target name="test" 
            depends="jar,compile.test" 
            description="Run junit tests.">

        <taskdef name="junit"
                 classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
            <classpath refid="project.classpath"/>
        </taskdef>	

        <junit printsummary="withOutAndErr"
               fork="true"
               forkmode="perTest"
               timeout="500000"
               maxmemory="512m"
               filtertrace="false"
               haltonfailure="true"
               haltonerror="true"
               showoutput="true" 
               logfailedtests="true">

            <formatter type="plain" usefile="false" />

            <classpath>
                <path refid="project.classpath"/>
            </classpath>

            <batchtest todir="target/test-reports"> 

                <fileset dir="src/test">
                    <include name="**/Test*.java"/>
                </fileset>

            </batchtest>
            
        </junit>
    </target> 

    <target name="test-all" 
            depends="jar,compile.test" 
            description="Run junit tests.">

        <taskdef name="junit"
                 classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
            <classpath refid="project.classpath"/>
        </taskdef>	

        <junit printsummary="on"
               fork="true"
               forkmode="perTest"
               timeout="500000"
               maxmemory="512m"
               filtertrace="false"
               haltonfailure="false"
               haltonerror="false"
               showoutput="true" 
               logfailedtests="true">

            <classpath>
                <path refid="project.classpath"/>
            </classpath>

            <batchtest todir="target/test-reports"> 

                <fileset dir="src/test">
                    <include name="**/Test*.java"/>
                </fileset>

            </batchtest>
            
        </junit>
    </target> 

    <target name="test-basic" 
            depends="jar,compile.test" 
            description="Run junit tests.">

        <taskdef name="junit"
                 classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
            <classpath refid="project.classpath"/>
        </taskdef>	

        <junit printsummary="on"
               fork="true"
               forkmode="perTest"
               timeout="500000"
               maxmemory="512m"
               filtertrace="false"
               haltonfailure="false"
               haltonerror="false"
               showoutput="true" 
               logfailedtests="true">

            <classpath>
                <path refid="project.classpath"/>
            </classpath>

            <batchtest todir="target/test-reports"> 

                <fileset dir="src/test">
                    <include name="**/peregrine/io/TestPartitionWriter.java"/>

                    <include name="**/peregrine/TestMapOnlyJobs"/>
                    <include name="**/peregrine/TestMapReduce"/>
                    <include name="**/peregrine/io/TestChunkMerger"/>
                    <include name="**/peregrine/io/TestChunkSorter"/>
                    <include name="**/peregrine/io/TestFullOuterJoin"/>
                    <include name="**/peregrine/io/TestPartitionWriter"/>
                    <include name="**/peregrine/io/TestReduceSort"/>
                    <include name="**/peregrine/values/TestIntValue"/>

                </fileset>

            </batchtest>
            
        </junit>
    </target> 

  <target name="javadoc" description="Generate javadoc" depends="compile">

    <mkdir dir="${javadocdir}">
    </mkdir>
    <tstamp>
      <format pattern="2000-yyyy" property="year">
      </format>
    </tstamp>
    <property name="copyright" value="Copyright &amp;copy; Tailrank Inc. All Rights Reserved.">
    </property>
    <property name="title" value="Peregrine Client Reference API">
    </property>

    <javadoc bottom="Copyright &amp;copy; Tailrank Inc. All Rights Reserved." 
             windowtitle="Peregrine API" 
             use="true" 
             private="false" 
             destdir="${javadocdir}" 
             author="true" 
             doctitle="Peregrine API" 
             version="true" 
             sourcepath="src/java" 
             classpathref="project.classpath"
             packagenames="peregrine.*">
      
    </javadoc>
    
  </target>

</project>
